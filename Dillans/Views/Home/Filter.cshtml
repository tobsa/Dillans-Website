@using Dillans.Models
@model Dillans.ViewModels.FilterViewModel

@{
    ViewBag.Title = "Filter";
}

<div class="container">
    <div class="row">
        @using (Html.BeginForm())
        {

            <div class="col-xs-6 col-sm-3">
                @Html.DropDownList("Ingredient", new SelectList(Model.FreeIngredients), new { @class = "form-control" })
            </div>

            <div class="col-xs-6 col-sm-2">
                <button type="submit" class="btn btn-default btn-block">Add to filter</button>
            </div>

        }

        @*<div class="col-xs-6 col-sm-2">

            </div>*@
    </div>
</div>

<hr/>


@if (Model.UsedIngredients.Count > 0)
{
    <div class="container">
        <div class="row">
            <div class="col-xs-6">
                @using (Html.BeginForm("ClearFilter", "Home", FormMethod.Post))
                {
                    <button type="submit" class="btn btn-default btn-block">Clear</button>
                }
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                @foreach (var ingredient in Model.UsedIngredients)
                {
                    <span> @ingredient </span>
                }
            </div>
        </div>
    </div>
}

<hr />

<div class="container">
    @Html.Partial("_DisplayPizzas", Model.PizzaGroups)
</div>











